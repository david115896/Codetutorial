// Include a Rouge theme

<%= Rouge::Themes::Monokai.render(scope: 'code') %>

// Overrides

.highlight .c1 {
   color: #9594af!important;
   font-style: italic;
}

// Custom Styles

.ch {
  height: 30px;
  background-color: #e1e5e7;
  max-width: 100%;
  border-radius: 8px 8px 0 0;
  text-align: left;
  padding-left : 10px;

  &__comps {
   display: inline-block;
   } 
 &__comps span {
  font-size: 1rem;
  margin: 7px 0 0 5px;
  font-family: 'Open Sans', 'Helvetica Neue', sans-serif;
   }
 }

.btnc {
   width: 17px;
   height: 17px;
   border-radius: 50%;
   border: 1px solid #f5f5f5;
   padding: 0 0 0 2px;
   margin: 6px 2px 0 0;
   cursor: default;

   &--green {
     background-color: #6ba83d;

   &:hover {
     background-color: #6ba83d;
   }
 }
   &--yellow {
     background-color: #e4b66a;

   &:hover {
     background-color: #e4b66a;
   }
 }
   &--red {
     background-color: #c95643;

   &:hover {
     background-color: #c95643;
   }
 }
}

